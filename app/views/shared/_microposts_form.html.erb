<%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field" >
      <%= f.text_area :content, placeholder: "Compose new post...", :rows => 15, style:'width:100%;' %>
      <h1><%= f.submit "Post", class: "btn btn-primary" %></h1>
    </div>

<% end %>